<ScrollView
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

<RelativeLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:background="#FAFAFA"
    tools:context="com.noemptypromises.rahularya.lionel.PlaceholderFragment">

    <TextView
        android:id="@+id/section_label"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <ProgressBar
        android:id="@+id/login_progress"
        style="?android:attr/progressBarStyleLarge"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="8dp"
        android:visibility="gone" />

<RelativeLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/wrapper">
    <android.support.v7.widget.CardView xmlns:card_view="http://schemas.android.com/apk/res-auto"
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:id="@+id/card_view1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="8dp"
        card_view:cardCornerRadius="4dp"
        card_view:cardBackgroundColor="#FFF">

        <RelativeLayout
            android:background="@drawable/ripple"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/info_text1a"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="14sp"
                android:paddingLeft="16sp"
                android:paddingTop="8sp"
                android:text="Period 1"/>

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/info_text1a"
                android:paddingTop="4sp"
                android:paddingBottom="8sp"
                android:paddingLeft="16sp"
                >
                <TextView
                android:id="@+id/info_text1b"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="24sp"
                android:textColor="#000"
                android:text="Free Period"
                android:tag="subject"/>
            </RelativeLayout>



        </RelativeLayout>

    </android.support.v7.widget.CardView>

    <android.support.v7.widget.CardView xmlns:card_view="http://schemas.android.com/apk/res-auto"
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:id="@+id/card_view2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/card_view1"
        android:layout_margin="8dp"
        card_view:cardCornerRadius="4dp"
        card_view:cardBackgroundColor="#FFF">

        <RelativeLayout
            android:background="@drawable/ripple"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/info_text2a"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="14sp"
                android:paddingLeft="16sp"
                android:paddingTop="8sp"
                android:text="Period 2"/>

            <TextView
                android:id="@+id/info_text2b"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="24sp"
                android:layout_below="@id/info_text2a"
                android:paddingTop="4sp"
                android:paddingBottom="8sp"
                android:paddingLeft="16sp"
                android:textColor="#000"
                android:text="Free Period"
                android:tag="subject"/>



        </RelativeLayout>

    </android.support.v7.widget.CardView>

    <android.support.v7.widget.CardView xmlns:card_view="http://schemas.android.com/apk/res-auto"
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:id="@+id/card_view3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="8dp"
        android:layout_below="@id/card_view2"
        card_view:cardCornerRadius="4dp"
        card_view:cardBackgroundColor="#FFF">

        <RelativeLayout
            android:background="@drawable/ripple"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/info_text3a"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="14sp"
                android:paddingLeft="16sp"
                android:paddingTop="8sp"
                android:text="Period 3"/>

            <TextView
                android:id="@+id/info_text3b"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="24sp"
                android:layout_below="@id/info_text3a"
                android:paddingTop="4sp"
                android:paddingBottom="8sp"
                android:paddingLeft="16sp"
                android:textColor="#000"
                android:tag="subject"
                android:text="Free Period"/>



        </RelativeLayout>

    </android.support.v7.widget.CardView>

    <android.support.v7.widget.CardView xmlns:card_view="http://schemas.android.com/apk/res-auto"
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:id="@+id/card_view4"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="8dp"
        android:layout_below="@id/card_view3"
        card_view:cardCornerRadius="4dp"
        card_view:cardBackgroundColor="#FFF">

        <RelativeLayout
            android:background="@drawable/ripple"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/info_text4a"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="14sp"
                android:paddingLeft="16sp"
                android:paddingTop="8sp"
                android:text="Period 4"/>

            <TextView
                android:id="@+id/info_text4b"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="24sp"
                android:layout_below="@id/info_text4a"
                android:paddingTop="4sp"
                android:paddingBottom="8sp"
                android:paddingLeft="16sp"
                android:textColor="#000"
                android:tag="subject"
                android:text="Free Period"/>



        </RelativeLayout>

    </android.support.v7.widget.CardView>

    <android.support.v7.widget.CardView xmlns:card_view="http://schemas.android.com/apk/res-auto"
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:id="@+id/card_view5"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="8dp"
        android:layout_below="@id/card_view4"
        card_view:cardCornerRadius="4dp"
        card_view:cardBackgroundColor="#FFF">

        <RelativeLayout
            android:background="@drawable/ripple"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/info_text5a"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="14sp"
                android:paddingLeft="16sp"
                android:paddingTop="8sp"
                android:text="Period 5"/>

            <TextView
                android:id="@+id/info_text5b"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="24sp"
                android:layout_below="@id/info_text5a"
                android:paddingTop="4sp"
                android:paddingBottom="8sp"
                android:textColor="#000"
                android:paddingLeft="16sp"
                android:tag="subject"
                android:text="Free Period"/>



        </RelativeLayout>

    </android.support.v7.widget.CardView>

</RelativeLayout>
</RelativeLayout>
</ScrollView>